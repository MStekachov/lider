    <IfModule mod_rewrite.c>
        Options +FollowSymlinks
        RewriteEngine On
    </IfModule>
     
    <IfModule mod_rewrite.c>
        # если /admin, то в backend
        RewriteCond %{REQUEST_URI} ^/(admin)
        RewriteRule ^admin/assets/(.*)$ backend/web/assets/$1 [L]
        RewriteRule ^admin/css/(.*)$ backend/web/css/$1 [L]
        RewriteRule ^admin/js/(.*)$ backend/web/js/$1 [L]
        RewriteCond %{REQUEST_URI} !^/backend/web/(assets|js|css|js)/
        RewriteCond %{REQUEST_URI} ^/(admin)
        RewriteRule ^.*$ backend/web/index.php [L]
        RewriteCond %{REQUEST_URI} ^/
        RewriteRule ^admin/assets/(.*)$ frontend/web/assets/$1 [L]
        RewriteRule ^admin/css/(.*)$ frontend/web/css/$1 [L]
        RewriteRule ^admin/js/(.*)$ frontend/web/js/$1 [L]
        RewriteCond %{REQUEST_URI} !^/frontend/web/(assets|js|css|js)/
        RewriteCond %{REQUEST_URI} ^/
        RewriteRule ^.*$ frontend/web/index.php [L]
    </IfModule>